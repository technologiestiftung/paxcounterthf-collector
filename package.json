{
  "name": "@tsb/paxcounter-thf-collector",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc -p .",
    "start": "nodemon",
    "lint-staged": "lint-staged"
  },
  "author": "Fabian Mor√≥n Zirfas",
  "contributors": [],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/node": "13.13.5",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "cz-conventional-changelog": "3.2.0",
    "dotenv-flow": "3.1.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.10.0",
    "jest": "26.0.1",
    "nodemon": "2.0.3",
    "prettier": "2.0.5",
    "ts-jest": "25.5.1",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "mongodb": "3.5.7",
    "ttn": "2.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jest-environment-node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "<rootDir>/dist"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "./node_modules/.bin/tsc -p . && node -r dotenv-flow/config --inspect dist/index.js",
    "ext": "ts,json",
    "restartable": "rs",
    "verbose": true,
    "env": {
      "NODE_ENV": "development",
      "NODE_DOCKER_ENV": "0"
    }
  },
  "prettier": {
    "printWidth": 80
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "updateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      }
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dist",
      "coverage"
    ],
    "env": {
      "jest/globals": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "after-used",
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|scss|ts|tsx|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && npm run lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
